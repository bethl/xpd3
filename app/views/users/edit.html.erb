<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= label "OldPassword", "Old Password" %><br />
    <%= text_field :password, :old %>
  </div>
  
  <%= render 'fields', :f => f %>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">change</a>
</div>