		<script>
			var antiFilter = new Array(); // this array keeps track of what tags are currently being filtered
			
			function include(arr, obj)
			{
				return (indexOfM(arr, obj) != -1);
			}
			
			function indexOfM(arr, str)
			{
				for(var i=0; i<arr.length; i++){
					if(arr[i]==str){
						return i;
					}
				}
				return -1;
			}

			//antiFilter.push("ha");
			//antiFilter.splice(0,1);
			//alert(include(antiFilter,"ha"));
			//alert(antiFilter.indexOf("ha"));
			//alert(indexOfM(antiFilter, "ha"));
			//alert(antiFilter.length);
			
			
		    $("#pFiltersList li").click(function () { 
	    	  var tehTag = $(this).html().toLowerCase();
	    	  
	    	  
		      var filterStrA = 'a[tag="'+ tehTag + '"]';                  // for good browsers
		      var filterStrB = 'div[tag="' + jQuery.trim(tehTag) + '"]';  // for suck browsers
		      	
		      if ($(this).hasClass("hili"))         // DISABLE FILTER
		      {
		      	$(this).removeClass("hili");
		      	
		      	antiFilter.splice(indexOfM(antiFilter, tehTag),1);
		      	
		      	$(filterStrA).parent().hide();
		      	$(filterStrB).hide();
		      	
		      	if (antiFilter.length == 0)
		      	{
		      		$(".slide-up-boxes a").show();
		      		$(".pbox").show();
		      	}
		      }
		      else                                  // ENABLE FILTER
		      {
		      	$(this).addClass("hili");
		      	
		      	// For the first time, if the antiFilter list is empty, that means we're going to hide every element before showing the one desired...
		      	if (antiFilter.length == 0)	{
		      		$(".pbox").hide();  // both!
		      	}
		      	
		      	if (!include(antiFilter,tehTag))   // if the antiFilter doesn't have the tag, then add it, otherwise, it's weird that it already had the tag... do nothing (prevent duplications...)
		      	{
		      		antiFilter.push(tehTag);
		      	}
		      	
		      	
		      	$(filterStrA).parent().show();
		      	$(filterStrB).show();

		      	
		      }
		    });
		</script>

		
			
		
		
